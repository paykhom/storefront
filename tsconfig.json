{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["ESNext", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,

      "allowJs": true, // Allow importing .js files
      "checkJs": true, // Optional: Enable type-checking for .js files
      "baseUrl": "./",
    },
     "include": [       
      "container", 
      "global.ts",
      "xmain.ts", 
      "app"    
, "application.ts", "application-config.ts"    ]
  }



